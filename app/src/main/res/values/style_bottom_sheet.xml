<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetModal</item>
    </style>

    <style name="AppTheme.BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_card_semi_rounded</item>
    </style>

    <!--bottomSheetDialogTheme-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--bottomSheetStyle-->
    <style name="AppModelStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_shape_collection</item>
    </style>
</resources>
