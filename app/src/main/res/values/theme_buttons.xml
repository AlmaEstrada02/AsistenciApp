<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppMaterialTheme.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppMaterialTheme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/color_text_dark</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="AppMaterialTheme.Button.Light" parent="AppMaterialTheme.Button">
        <!-- Variable attrs -->
        <item name="iconTint">@color/color_text_light</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:backgroundTint">@color/color_button_default</item>
        <item name="android:stateListAnimator">@animator/animation_button_elevation</item>
    </style>

    <style name="AppMaterialTheme.Button.Dark" parent="AppMaterialTheme.Button">
        <!-- Variable attrs -->
        <item name="iconTint">@color/color_text_dark</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:stateListAnimator">@animator/animation_button_elevation</item>
    </style>

    <style name="AppMaterialTheme.Button.Outlined.Blue" parent="AppMaterialTheme.Button.Outlined">
        <item name="strokeColor">@color/color_button_default</item>
        <item name="android:textColor">@color/color_button_default</item>
    </style>

    <style name="AppMaterialTheme.Button.Outlined.Blue.Mini" parent="AppMaterialTheme.Button.Outlined.Blue">
        <item name="android:textSize">@dimen/font_size_xsmall</item>
        <item name="android:padding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="AppMaterialTheme.Button.Link" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppMaterialTheme.Slider">
        <item name="slider_height">45dp</item>
        <item name="area_margin">-1dp</item>
        <item name="icon_margin">10dp</item>
        <item name="text_appearance">@style/AppTheme.Text.Circular.Heading.White</item>
    </style>
</resources>