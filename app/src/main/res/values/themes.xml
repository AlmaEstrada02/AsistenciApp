<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCurso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryCoppelAzul2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryCoppelAzul</item>
        <item name="colorPrimaryVariant">@color/complementario_azul_ligero</item>
        <item name="colorOnPrimary">@color/colorBackgroundCoppelBlanco</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryCoppelAzul</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryCoppelAzul</item>
        <item name="colorOnSecondary">@color/colorBackgroundCoppelBlanco</item>

        <item name="colorOnSurface">@color/colorTextCoppelNegro</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppMaterialTheme.Splash" parent="AppMaterialTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorSplash</item>
        <item name="colorPrimaryDark">@color/colorSplash</item>
        <item name="android:statusBarColor">@color/colorPrimaryCoppelAzul2</item>
    </style>

</resources>